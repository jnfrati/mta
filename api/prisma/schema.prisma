// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum Role {
  SUDO
  ADMIN
  USER
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  password String
  role     Role     @default(USER)
  Tenant   Tenant[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean? @default(false)
  authors   Author[]

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int

  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tenantId Int
  files    File[]
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  posts Post[]
}

enum FileType {
  AUDIO
  PDF
}

enum FileProvider {
  S3
  GOOGLE_DRIVE
}

model File {
  id       Int          @id @default(autoincrement())
  name     String
  url      String
  type     FileType
  provider FileProvider
  post     Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId   Int
}

model Tenant {
  id      Int    @id @default(autoincrement())
  name    String
  slug    String @unique()
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId Int

  categories Category[]
  Post       Post[]
}

model Category {
  id       Int    @id @default(autoincrement())
  name     String
  slug     String @unique()
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  tenantId Int

  posts Post[]
}
